<Window x:Class="Testovaya.NewUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Testovaya"
        mc:Ignorable="d"
        Title="NewUser" Height="450" Width="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    MinWidth="200">
            <TextBlock Text="Login" FontFamily="Arial"/>
            <TextBox x:Name="LoginTxb"/>

            <TextBlock Text="Password" FontFamily="Arial"/>
            <TextBox x:Name="Password_Txb"/>

            <ComboBox x:Name="CmbRole"
                      DisplayMemberPath="Title"
                      Margin="0 10" SelectionChanged="CmbRole_SelectionChanged"/>

            <Button Content="Сохранить"
                    Click="Save_Btn_Click" FontFamily="Arial" FontSize="14" Background="Bisque"/>
            
        </StackPanel>

    </Grid>
</Window>
